<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.varunverma.abapquiz" >

	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.INTERNET" /> 
	<uses-permission android:name="com.android.vending.BILLING" />
	<permission android:name="org.varunverma.abapquiz.permission.C2D_MESSAGE" android:protectionLevel="signature" />
	<uses-permission android:name="org.varunverma.abapquiz.permission.C2D_MESSAGE" />
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="org.varunverma.abapquiz.Main"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Eula"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.EULA" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".QuizList"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.QUIZ_LIST" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".StartQuiz"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.QUIZ" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ActivatePremiumFeatures"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.PREMIUM_FEATURES" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".DisplayFile"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.WEB_VIEW" />
            </intent-filter>
        </activity>

        <service
            android:name="org.varunverma.abapquiz.AppGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>

        <service
            android:name="org.varunverma.abapquiz.AppInstanceIDService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        

        
    </application>

</manifest>